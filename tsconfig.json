{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES5",
        "module": "ESNext",
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "typeRoots": ["node_modules/@types", "src/types"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
